<MainScreen>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        id: what_sound
        text: "Choose a sound to play"
        font_size: 24
        size_hint_y: None
        height: 50
        halign: 'center'
        valign: 'middle'
        text_size: self.size
        color: 1, 1, 1, 1

        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
    Label:
        id: what_HP
        text: "Current HP: 1"
        font_size: 24
        size_hint_y: None
        height: 50
        halign: 'center'
        valign: 'middle'
        text_size: self.size
        color: 1, 1, 1, 1

        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        size_hint_y: None
        height: 50
        spacing: 10

        Button:
            text: "◀ LEFT"
            on_press: root.spinner_left()

        Button:
            text: "CLICK"
            on_press: root.spinner_click()

        Button:
            text: "RIGHT ▶"
            on_press: root.spinner_right()
        
        Button:
            text: "HP Click"
            on_press: root.HP_joystick_click()


    GridLayout:
        id: dynamic_area
        cols: 3
        rows: 3
        spacing: 15
        padding: 20
        size_hint_y: 0.8
